{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nuxt",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nuxt",
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nuxt (with Network)",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nuxt",
                "dev",
                "--host"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}